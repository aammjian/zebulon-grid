{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true
    },
    "exclude": [
        "node_modules",
        "bower_components",
        "typings/main.d.ts",
        "typings/main"
    ],
    "filesGlob": [
    "./src/**/*.ts",
    "./test/**/*.ts",
    "!./node_modules/**/*.ts",
    "src/custom-typings.d.ts",
    "typings/browser.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "resolveGlobs": true,
    "forkChecker": true
  },
   "atom": { "rewriteTsconfig": false }
}
